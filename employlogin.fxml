        <Label layoutX="202.0" layoutY="129.0" prefHeight="67.0" prefWidth="249.0" text="              登录界面"
               textFill="#2d9ddd">
            <font>
                <Font size="19.0"/>
            </font>
        </Label>

        <RadioButton layoutX="218.0" layoutY="313.0" mnemonicParsing="false" text="administrator">
            <toggleGroup>
                <ToggleGroup fx:id="post"/>
            </toggleGroup>
        </RadioButton>
        <RadioButton layoutX="357.0" layoutY="313.0" mnemonicParsing="false" selected="true" text="employees"
                     toggleGroup="$post"/>
        <Label layoutX="102.0" layoutY="314.0" text="请选择登录类型" textFill="#641cff"/>


    </children>
</AnchorPane>
