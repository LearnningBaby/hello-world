<?import javafx.scene.text.*?>

<AnchorPane id="admin" fx:id="admin" prefHeight="532.0" prefWidth="680.0" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="show.ShowLogin">
    <children>
        <Button layoutX="340.0" layoutY="346.0" mnemonicParsing="false" onAction="#login" prefHeight="23.0"
                prefWidth="67.0" text="登录" textFill="#562abc"/>
        <PasswordField fx:id="password" layoutX="246.0" layoutY="266.0" onDragEntered="#login" promptText="密码"/>
        <TextField fx:id="username" layoutX="246.0" layoutY="204.0" onDragEntered="#login" promptText="用户名"/>
        <Label layoutX="149.0" layoutY="208.0" text="请输入用户名 :" textFill="#31991a"/>
        <Label layoutX="155.0" layoutY="270.0" text="请输入密码 :" textFill="#20e12d"/>
        <Button layoutX="234.0" layoutY="346.0" mnemonicParsing="false" onAction="#clear" prefHeight="23.0"
